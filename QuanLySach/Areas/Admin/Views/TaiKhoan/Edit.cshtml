@model QuanLySach.Models.TaiKhoan

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<h2>Chỉnh sửa tài khoản</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.TenDangNhap)

        <div class="form-group">
            @Html.LabelFor(model => model.TenDangNhap, new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="padding-top:8px">
                @Html.DisplayFor(model => model.TenDangNhap)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.MatKhau, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new {@type="password", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MatKhau)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở lại danh sách", "Index")
</div>
