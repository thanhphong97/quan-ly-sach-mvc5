@*@model IEnumerable<QuanLySach.Models.Sach>*@
@using PagedList.Mvc;
@using QuanLySach.Models;
@model PagedList.IPagedList<Sach>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<h2>Quản lý sách</h2>

<p>
    @Html.ActionLink("Tạo sách mới", "Create")
</p>
<table class="table" id="tbSach">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().TheLoai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().TenSach)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().GiaTien)
        </th>
        <th style="width:20%">
            @Html.DisplayNameFor(model => model.First().GioiThieuChung)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().AnhBia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().NoiDungChiTiet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().TacGia)
        </th>
        <th>
           @Html.DisplayNameFor(model => model.First().NgayPhatHanh)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td id="tenloai">
                @Html.DisplayFor(modelItem => item.LoaiSach.TenLoai)
            </td>
            <td id="tensach">
                @Html.DisplayFor(modelItem => item.TenSach)
            </td>
            <td>
                @string.Format("{0:0,00#}", item.GiaTien)
            </td>
            <td>
                <div class="noidungsach">@Html.Raw(item.GioiThieuChung)</div>
            </td>
            <td>
                <img width="100px" height="200px" src="~/Content/images/@item.AnhBia" />
            </td>
            <td>
                <div class="noidungsach">@Html.Raw(item.NoiDungChiTiet)</div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TacGia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayPhatHanh)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaSach })<br />
                @Html.ActionLink("Details", "Details", new { id = item.MaSach })<br />
                @Html.ActionLink("Delete", "Delete", new { id = item.MaSach })
            </td>
        </tr>
    }
</table>


<div class="menuPhanTrang">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>
