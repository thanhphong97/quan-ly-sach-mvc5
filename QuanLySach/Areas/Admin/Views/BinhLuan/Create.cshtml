@model QuanLySach.Models.BinhLuan

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";

}

<h2>Tạo mới bình luận</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>BinhLuan</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.TenDangNhap,"Người bình luận", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TenDangNhap")
                @Html.ValidationMessageFor(model => model.TenDangNhap)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaSach,"Tên sách", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MaSach")
                @Html.ValidationMessageFor(model => model.MaSach)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NoiDung, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NoiDung)
                @Html.ValidationMessageFor(model => model.NoiDung)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở lại danh sách", "Index")
</div>
