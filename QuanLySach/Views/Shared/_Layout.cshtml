<!DOCTYPE html>
<head>
    <title>Web bán sách</title>
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Content/js/script.js"></script>
</head>
<body>
    <!--header start-->
    <header>
        <div class="slide"></div>
        <div class="menu">
            <ul>
                <a href="@Url.Action("Index","Home")"><li>Home</li></a>
                <li>About</li>
            </ul>
        </div>
    </header>
    <!--header end-->
    <!--content start-->
    <div class="content">
        <div class="left">
            <div class="left_div">
                @using (@Html.BeginForm("DangNhap", "Login", FormMethod.Post))
                {
                    <input id="TaiKhoan" name="txtTaiKhoan" type="text" placeholder="Username">
                    <input id="MatKhau" name="txtmatKhau" type="password" placeholder="*********">
                    <button id="btnSignIn" type="submit" class="signin" value="">Sign In</button>
                }
            </div>
            <div class="left_div">
                <div class="title">
                    <h3>Categories</h3>
                </div>
                <div class="categories">
                    @Html.Action("DanhMuc_Partial", "Categories")
                </div>
            </div>
        </div>
        <div id="NoiDung" class="right">
            @RenderBody()
        </div>
    </div>
    <!--content end-->
    <!--footer start-->
    <footer>
        <div class="footer">
        </div>
    </footer>
    <!--footer end-->
</body>